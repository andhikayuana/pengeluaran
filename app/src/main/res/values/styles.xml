<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ItemTableRow" parent="MatchWrap">
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ItemTableRow.Title">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTableRow.AlignRight">
        <item name="android:gravity">right</item>
    </style>

    <style name="SelectableItemLayout" parent="MatchWrap">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LabelSelectableItemLayout" parent="MatchWrap">
        <item name="android:textColor">#131313</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DescSelectableItemLayout" parent="MatchWrap">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
